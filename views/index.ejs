<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gemini AI Chat</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #121212;
      color: white;
      display: flex;
      height: 100vh;
    }
    .sidebar {
      width: 250px;
      background: #1e1e1e;
      padding: 20px;
      overflow-y: auto;
      border-right: 1px solid #333;
      transition: transform 0.3s ease;
    }
    .collapsed {
      transform: translateX(-100%);
      display: none;
    }
    .sidebar h2 { color: #00ffea; margin-bottom: 10px; }
    .history-item {
      background: #2a2a2a;
      padding: 8px 10px;
      margin-bottom: 8px;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.3s;
    }
    .history-item:hover { background: #3a3a3a; }
    .clear-button {
      background: crimson;
      color: white;
      border: none;
      padding: 8px;
      width: 100%;
      border-radius: 4px;
      cursor: pointer;
    }
    .main {
      flex: 1;
      padding: 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
      overflow-y: auto;
      width: 100%;
    }
    h1 { color: #00ffea; }
    .toggle-btn {
      /* display: none; */
      position: absolute;
      top: 10px;
      left: 10px;
      background: #00ffea;
      color: black;
      border: none;
      border-radius: 4px;
      padding: 5px 10px;
      font-weight: bold;
      cursor: pointer;
      z-index: 1001;
    }
    form {
      width: 100%;
      max-width: 600px;
      display: flex;
      flex-direction: column;
    }
    input[type="text"] {
      padding: 12px;
      border: none;
      border-radius: 4px;
      margin-top: 10px;
      background: #1e1e1e;
      color: white;
    }
    button {
      margin-top: 10px;
      padding: 10px;
      background: #00ffea;
      color: black;
      border: none;
      border-radius: 4px;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s;
    }
    button:hover { background: #00c9cc; }
    .response {
      background: #1f1f1f;
      margin-top: 20px;
      padding: 20px;
      border-left: 4px solid #00ffea;
      border-radius: 4px;
      /* max-width: 600px; */
      white-space: pre-wrap;
    }
    .response img {
      /* max-width: 100%; */
      position: relative;
      left: 28%;
      margin-top: 10px;
      width: 26vw;
    }
    .spinner {
      border: 4px solid #333;
      border-top: 4px solid #00ffea;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin-top: 30px;
    }
    .hidden { display: none; }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    @media (max-width: 768px) {
  .sidebar {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    z-index: 1000;
    transform: translateX(-100%);
    display: none;
  }
  .collapsed{
    transform: translateX(0%);
    display: block;
  }
}
  </style>
</head>
<body>
  <button class="toggle-btn" onclick="toggleSidebar()">â˜°</button>
  <div class="sidebar" id="sidebar">
    <h2 style="margin-top: 40px;">Past Searches</h2>
    <% if (typeof history !== 'undefined' && history.length > 0) { %>
      <% history.forEach((item, index) => { %>
        <div class="history-item" onclick="showHistory(<%= index %>)"><%= item.prompt %></div>
      <% }); %>
      <form action="/clear" method="POST">
        <button class="clear-button">Clear History</button>
      </form>
    <% } else { %>
      <p style="margin-top: 10px;">No past searches.</p>
    <% } %>
  </div>

  <div class="main">
    <h1>Ask Gemini AI</h1>
    <form id="aiForm" method="POST">
      <input type="text" name="prompt" placeholder="Type your question or image description..." required>
      <button type="submit" formaction="/ask"">Generate text</button>
      <button type="submit" formaction="/generateimage">generate image</button>
    </form>

    <div id="loadingSpinner" class="spinner hidden"></div>
    <% if (response) { %>
  <div class="response" id="responseBox">
    <h3>Gemini says:</h3>
    <p><%= response %></p>
    <% if (imagePath) { %>
      <img src="<%= imagePath %>" alt="Generated Image">
    <% } %>
  </div>
<% } else { %>
  <div id="responseBox"></div>
<% } %>

  </div>
  </div>

  <script>
    const form = document.getElementById('aiForm');
    const spinner = document.getElementById('loadingSpinner');
    const responseBox = document.getElementById('responseBox');
    const sidebar = document.getElementById('sidebar');

    form.addEventListener('submit', () => {
      responseBox.innerHTML = '';
      spinner.classList.remove('hidden');
    });

    function showHistory(index) {
      const history = <%- JSON.stringify(history) %>;
      const item = history[index];
      responseBox.innerHTML = `
          <h3>Prompt:</h3>
          <p>${item.prompt}</p>
          <h3>Gemini says:</h3>
          <p>${item.response}</p>
          ${item.imagePath ? `<img src="${item.imagePath}" alt="Generated Image">` : ''}`;
    }

    function toggleSidebar() {
      sidebar.classList.toggle('collapsed');
    }
    
  </script>
</body>
</html>

